# Test Environment Configuration
# Copy this file to .env and customize for your environment

# API Configuration
API_BASE=http://localhost:8080/api/v1
API_TIMEOUT=30

# Model Provider Configuration  
MODEL_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OPENAI_API_KEY=sk-xxx  # only used if provider=openai

# OpenSearch Configuration
OS_SCHEME=http
OS_HOST=localhost
OS_PORT=9200
OS_USERNAME=
OS_PASSWORD=
OS_VERIFY_CERTS=false
OS_TIMEOUT=30

# OpenSearch Index Names
OS_IDX_PLANNER=cybrty-planner
OS_IDX_ACTIONS=cybrty-actions
OS_IDX_RUNS=cybrty-runs

# Policy Configuration
POLICY_ALLOW_NETS=10.0.0.0/8,192.168.0.0/16,127.0.0.0/8
POLICY_MAX_HOSTS=100
POLICY_EXPLOIT_SIMULATION=false

# Test Configuration
TEST_TIMEOUT=300
TEST_RETRY_COUNT=3
TEST_PARALLEL_WORKERS=4

# Mock Services (for testing without real tools)
USE_MOCKS=true
MOCK_ZAP_URL=http://localhost:8090
MOCK_MSF_URL=http://localhost:8091

# Simulation Settings (safety first)
DEFAULT_SIMULATE=true
ALLOW_DESTRUCTIVE=false

# Tenant/Organization Settings
DEFAULT_TENANT_ID=test-tenant-001
TEST_ORG_ID=test-org-001

# Logging
LOG_LEVEL=INFO
DEBUG_OPENSEARCH=false

# Performance Testing
PERF_USERS=20
PERF_SPAWN_RATE=5
PERF_RUN_TIME=2m

# CI/CD Settings
CI_MODE=false
SKIP_SLOW_TESTS=false

# Development Settings
DEV_MODE=true
PRESERVE_TEST_DATA=false
